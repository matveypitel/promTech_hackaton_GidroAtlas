# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy csproj files and restore dependencies
COPY ["GidroAtlas.Web/GidroAtlas.Web.csproj", "GidroAtlas.Web/"]
COPY ["Directory.Packages.props", "./"]
RUN dotnet restore "GidroAtlas.Web/GidroAtlas.Web.csproj"

# Copy all source files
COPY GidroAtlas.Web/ GidroAtlas.Web/

# Build the application
WORKDIR /src/GidroAtlas.Web
RUN dotnet build "GidroAtlas.Web.csproj" -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish "GidroAtlas.Web.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "GidroAtlas.Web.dll"]
