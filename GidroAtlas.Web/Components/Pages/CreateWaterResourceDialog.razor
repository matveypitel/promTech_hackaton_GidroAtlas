@using GidroAtlas.Shared.DTOs
@using GidroAtlas.Shared.Enums
@using GidroAtlas.Web.Interfaces

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-1" />
            Добавление водного ресурса
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@isFormValid">
            <MudStack Spacing="3">
                <MudTextField @bind-Value="createModel.Name" 
                              Label="Название" 
                              Required="true" 
                              RequiredError="Название обязательно"
                              Variant="Variant.Outlined" />

                <MudTextField @bind-Value="createModel.Region" 
                              Label="Область" 
                              Required="true" 
                              RequiredError="Область обязательна"
                              Variant="Variant.Outlined" />

                <MudSelect @bind-Value="createModel.ResourceType" 
                           Label="Тип водного ресурса" 
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="ResourceType.Lake">Озеро</MudSelectItem>
                    <MudSelectItem Value="ResourceType.Canal">Канал</MudSelectItem>
                    <MudSelectItem Value="ResourceType.Reservoir">Водохранилище</MudSelectItem>
                </MudSelect>

                <MudSelect @bind-Value="createModel.WaterType" 
                           Label="Тип воды" 
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="WaterType.Fresh">Пресная</MudSelectItem>
                    <MudSelectItem Value="WaterType.NonFresh">Непресная</MudSelectItem>
                </MudSelect>

                <MudSwitch @bind-Value="createModel.HasFauna" 
                           Label="Наличие фауны" 
                           Color="Color.Primary" />

                <MudDatePicker @bind-Date="passportDate" 
                               Label="Дата паспорта" 
                               DateFormat="dd.MM.yyyy"
                               Variant="Variant.Outlined" />

                <div>
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Техническое состояние</MudText>
                    <MudRating @bind-SelectedValue="createModel.TechnicalCondition" 
                               MaxValue="5" 
                               Color="Color.Primary" />
                    <MudText Typo="Typo.caption">@createModel.TechnicalCondition из 5</MudText>
                </div>

                <MudNumericField @bind-Value="createModel.Latitude" 
                                 Label="Широта" 
                                 Format="F6"
                                 Min="-90f"
                                 Max="90f"
                                 Step="0.000001f"
                                 Variant="Variant.Outlined" />

                <MudNumericField @bind-Value="createModel.Longitude" 
                                 Label="Долгота" 
                                 Format="F6"
                                 Min="-180f"
                                 Max="180f"
                                 Step="0.000001f"
                                 Variant="Variant.Outlined" />
                                 
                <MudTextField @bind-Value="createModel.PdfUrl" 
                              Label="Ссылка на паспорт (PDF)" 
                              Required="true" 
                              RequiredError="Ссылка обязательна"
                              Variant="Variant.Outlined" />

                @if (saveError != null)
                {
                    <MudAlert Severity="Severity.Error">@saveError</MudAlert>
                }
            </MudStack>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" 
                   Color="Color.Default" 
                   OnClick="Cancel"
                   Disabled="isSaving">
            Отмена
        </MudButton>
        <MudButton Variant="Variant.Filled" 
                   Color="Color.Primary" 
                   OnClick="Save"
                   Disabled="isSaving || !isFormValid">
            @if (isSaving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                <span>Сохранение...</span>
            }
            else
            {
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                <span>Создать</span>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public IWaterObjectApiService? WaterObjectApi { get; set; }

    private MudForm? form;
    private CreateWaterObjectDto createModel = new() 
    { 
        Name = "", 
        Region = "", 
        PdfUrl = "",
        TechnicalCondition = 3 
    };
    private DateTime? passportDate = DateTime.Today;
    private bool isFormValid;
    private bool isSaving;
    private string? saveError;

    private void Cancel()
    {
        MudDialog?.Cancel();
    }

    private async Task Save()
    {
        if (WaterObjectApi == null)
            return;

        if (form != null)
        {
            await form.Validate();
            if (!form.IsValid)
                return;
        }

        try
        {
            isSaving = true;
            saveError = null;
            StateHasChanged();

            // Update passport date from picker
            if (passportDate.HasValue)
            {
                createModel.PassportDate = DateTime.SpecifyKind(passportDate.Value.Date, DateTimeKind.Utc);
            }

            Console.WriteLine($"Creating water object: {createModel.Name}");
            
            var result = await WaterObjectApi.CreateAsync(createModel);
            
            if (result != null)
            {
                Console.WriteLine($"Water object created successfully: {result.Name}");
                MudDialog?.Close(DialogResult.Ok(result));
            }
            else
            {
                saveError = "Не удалось создать объект. Проверьте подключение к серверу.";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating water object: {ex.Message}");
            saveError = $"Ошибка создания: {ex.Message}";
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }
}
